<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="748" Width="1250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="369*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="50">
            <Button Content="Welcome" VerticalAlignment="Top" Margin="0,10,0,0" Height="25" Click="BtnClickWelcome"/>
            <Button Content="Page1" VerticalAlignment="Bottom" Margin="0,10,0,0" Height="25" Click="BtnClickPage1"/>
            <Button Content="Page2" VerticalAlignment="Bottom" Margin="0,10,0,0" Height="25" Click="BtnClickPage2"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="45,0,0,0" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
